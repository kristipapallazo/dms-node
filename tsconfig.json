{
  "compilerOptions": {
    // "target": "es6",
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "watchOptions": {
    "excludeDirectories": ["**/node_modules", "dist"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
